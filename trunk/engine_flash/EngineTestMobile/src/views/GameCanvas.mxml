<?xml version="1.0" encoding="utf-8"?>
<mx:UIComponent xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				enterFrame="enterFrameHandler(event)" initialize="initializeHandler(event)"
				touchBegin="touchBeginHandler(event)" touchEnd="touchEndHandler(event)"
				touchMove="touchMoveHandler(event)" touchTap="touchTapHandler(event)">
	<fx:Script>
		<![CDATA[
			import com.cell.gfx.rpg.G2DCSprite;
			import com.cell.gfx.rpg.G2DScene;
			import com.cell.gameedit.ResourceEvent;
			import com.cell.gameedit.ResourceLoader;
			import com.cell.gfx.game.CGraphicsDisplay;
			
			import mx.events.FlexEvent;
			
			var cg 				: CGraphicsDisplay;
			
			var resloader000002	: com.cell.gameedit.ResourceLoader;
			
			var cspr000002 		: G2DCSprite;
			
			var cscene 			: G2DScene;
		
			protected function initializeHandler(event:FlexEvent):void
			{
				graphics.beginFill(0xff00ff00);
				graphics.drawRect(0, 0, width, height);
				graphics.endFill();

				
				// TODO Auto-generated method stub
				cg = new CGraphicsDisplay(graphics);
				
				resloader000002 = new com.cell.gameedit.ResourceLoader("/resource/actor/actor.xml");
				resloader000002.addEventListener(ResourceEvent.LOADED, loaded_set);
				resloader000002.load();
			}
			
			private function loaded_set(e:ResourceEvent) : void
			{
				trace("loaded_set : " + e.res.getUrl());
				// ------------------------------------------
				cspr000002 = new G2DCSprite(resloader000002.getSprite("000002"));	
				addChild(cspr000002);
			}
			
			protected function enterFrameHandler(event:Event):void
			{
				if (cspr000002 != null)
				{
//					cspr000002.x = mouseX;
//					cspr000002.y = mouseY;
					
					cspr000002.src.nextCycFrame();
					cspr000002.repaint();
				}
				
			}
			
			protected function touchBeginHandler(event:TouchEvent):void
			{
					trace("touchBeginHandler: " + event);
					if (cspr000002 != null)
					{
						cspr000002.x = event.localX;
						cspr000002.y = event.localY;
					}
				
			}
			
			protected function touchMoveHandler(event:TouchEvent):void
			{
					trace("touchMoveHandler: " + event);
//					if (cspr000002 != null)
//					{
//						cspr000002.x = event.localX;
//						cspr000002.y = event.localY;
//					}
			}
			
			
			protected function touchEndHandler(event:TouchEvent):void
			{
					trace("touchEndHandler: " + event);
//					if (cspr000002 != null)
//					{
//						cspr000002.x = event.localX;
//						cspr000002.y = event.localY;
//					}
				
			}
			
			protected function touchTapHandler(event:TouchEvent):void
			{
				trace("touchTapHandler: " + event);
				if (cspr000002 != null)
				{
					cspr000002.x = event.localX;
					cspr000002.y = event.localY;
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
